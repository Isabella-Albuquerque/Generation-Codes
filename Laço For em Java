package classCodes;

import java.util.Scanner;

public class LacoFor {

	public static void main(String[] args) {
	
		Scanner scanner = new Scanner(System.in);
	    
	    int countPar = 0;
	    int countImpar = 0;
	        
		for(int i=1; i<=10; i++){
		    System.out.println("\nDigite o número\t" +i);
			    int numero = scanner.nextInt();
			    if(numero %2 == 0) {
			       countPar++;
			    } else {
			       countImpar++;
			    }
			}
			System.out.println("O numero de pares é de: "+countPar);
				System.out.println("O numero de ímpares é de: "+countImpar);

	}

}




